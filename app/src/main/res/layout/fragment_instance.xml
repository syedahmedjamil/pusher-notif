<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.instance.InstanceFragment">

    <data>

        <import type="com.github.syedahmedjamil.pushernotif.ui.instance.InstanceViewModel" />

        <import type="android.widget.ArrayAdapter" />

        <variable
            name="adapter"
            type="ArrayAdapter" />

        <variable
            name="viewmodel"
            type="InstanceViewModel" />

    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/instance_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <EditText
                android:id="@+id/instance_id_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890-"
                android:hint="@string/instance_id_text_input_hint"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textFilter"
                android:minHeight="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ListView
                android:id="@+id/instance_interests_list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:adapter="@{adapter}"
                app:items="@{viewmodel.interests}"
                app:layout_constraintTop_toBottomOf="@+id/instance_id_edit_text"
                app:layout_constraintBottom_toTopOf="@+id/instance_interest_edit_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/instance_interest_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890-"
                android:hint="@string/instance_interest_text_input_hint"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textFilter"
                android:minHeight="48dp"
                app:layout_constraintBottom_toTopOf="@+id/instance_add_interest_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/instance_add_interest_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewmodel.addInterest(instanceInterestEditText.getText().toString())}"
                android:text="@string/instance_add_interest_button_text"
                app:layout_constraintBottom_toTopOf="@+id/instance_subscribe_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/instance_subscribe_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instance_subscribe_button_text"
                android:onClick="@{() -> viewmodel.subscribe(instanceIdEditText.getText().toString())}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

